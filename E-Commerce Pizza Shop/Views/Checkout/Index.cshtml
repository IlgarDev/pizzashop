@model IEnumerable<PizzaApp.Models.Entities.Item>
@{decimal sum = 0;}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food.Price)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Food.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    @(sum += item.Quantity * item.Food.Price)
            </td>
        </tr>
}
        <tr class="">
            <th colspan="2" class="text-right">Total</th>
            <th >@sum</th>
        </tr>
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Buy">Buy</a>
